{
  // Format all files on save with eslint
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,

  // Display rulers
  "editor.rulers": [100, 120],

  // Eslint
  "eslint.enable": true,
  "eslint.workingDirectories": ["."],
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  // Easier debugging
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.javascript.terminalOptions": {
    "skipFiles": ["<node_internals>/**", "**/node_modules"]
  },
  "typescript.preferences.autoImportFileExcludePatterns": ["**/dist/*"],

  // Remove build & configuration files from the sidebar
  "files.exclude": {
    // ".eslintrc.json": true,
    // ".github": true,
    // ".husky": true,
    // ".prettierrc": true,
    // ".vscode": true,
    // "**/coverage": true,
    // "**/dist": true,
    // "**/jest.config.ts": true,
    // "**/LICENSE": true,
    // "**/node_modules": true,
    // "**/tsconfig.eslint.json": true,
    // "**/tsconfig.json": true,
    // "commitlint.config.js": true,
    // "dist-docs": true,
    // "global.d.ts": true,
    // "lerna.json": true,
    // "typedoc.json": true,
    // "yarn.lock": true
  },

  // Performance
  "files.watcherExclude": {
    "**/node_modules/**": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Debugging tests
  "jest.jestCommandLine": "node_modules/.bin/jest --runInBand --testTimeout=60000000",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#79cb9a",
    "activityBar.background": "#79cb9a",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#865ec1",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#79cb9a",
    "statusBar.background": "#54bd7e",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#3ea065",
    "statusBarItem.remoteBackground": "#54bd7e",
    "statusBarItem.remoteForeground": "#15202b",
    "tab.activeBorder": "#79cb9a",
    "titleBar.activeBackground": "#54bd7e",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#54bd7e99",
    "titleBar.inactiveForeground": "#15202b99"
  }
}
