{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@qiwi/multi-semantic-release": "^6.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "jest-extended": "^1.2.0",
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "2.5.1",
    "prettier-eslint": "^13.0.0",
    "ts-jest": "^27.1.2",
    "typedoc": "^0.22.10",
    "typedoc-github-wiki-theme": "^1.0.0",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:watch": "lerna run --parallel --no-bail --no-prefix build:watch",
    "build": "lerna run build",
    "clean": "lerna run clean && rm -rf coverage api-reference/",
    "docs": "yarn build && typedoc",
    "lint": "lerna exec eslint src test",
    "lint:fix": "lerna exec eslint src test -- --fix",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "release": {
    "branches": "main",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "scope": "force-release",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog"
    ]
  }
}
