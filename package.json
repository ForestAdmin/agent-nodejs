{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.0",
    "jest": "^27.4.4",
    "lerna": "^4.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:watch": "lerna run --parallel --no-bail --no-prefix build:watch",
    "build": "lerna run build",
    "docs": "yarn build && typedoc",
    "lint": "lerna run lint",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "test:coverage:clean": "rm -rf .nyc_output",
    "test:coverage:report:_base": "nyc report --report-dir=coverage --reporter",
    "test:coverage:report:html": "yarn test:coverage:report:_base html",
    "test:coverage:report:lcov": "yarn test:coverage:report:_base lcov",
    "test:coverage:report:summary": "yarn test:coverage:report:_base summary"
  },
  "workspaces": [
    "packages/*"
  ]
}
