{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitOverride": true,
    "stripInternal": true
  },
  "include": ["src/**/*"]
}
